@model OnlineTicket.Models.CustomerEditVM

@{
    ViewData["Title"] = "My Profile";
}

<link rel="stylesheet" href="~/css/customerprofile.css" asp-append-version="true" />

<div class="container mx-auto py-10 px-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">

        <!-- LEFT COLUMN -->
        <div class="lg:col-span-7">
            <div class="bg-white shadow-md rounded-xl p-6 border border-gray-100">

                <div class="flex items-center justify-between mb-4">
                    <h4 class="text-2xl font-semibold text-gray-700">@ViewData["Title"]</h4>
                </div>

                <hr class="border-gray-200 mb-4" />

                @if (TempData["ProfileSuccess"] != null)
                {
                    <div class="bg-green-100 text-green-700 px-4 py-3 rounded-md mb-4 flex justify-between items-center">
                        <div>
                            <strong>Success!</strong> @TempData["ProfileSuccess"]
                        </div>
                        <button type="button" class="text-lg font-bold text-green-700" data-bs-dismiss="alert">×</button>
                    </div>
                }

                <form asp-action="Profile" method="post" novalidate>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                        <!-- FULL NAME -->
                        <div>
                            <label asp-for="FullName" class="block font-medium text-gray-700"></label>
                            <input asp-for="FullName"
                                   class="mt-1 w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500"
                                   placeholder="Enter your full name" />
                            <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- EMAIL -->
                        <div>
                            <label asp-for="Email" class="block font-medium text-gray-700"></label>
                            <input asp-for="Email"
                                   class="mt-1 w-full bg-gray-100 border border-gray-300 rounded-lg p-2"
                                   readonly />
                            <small class="text-gray-500 text-sm">Email cannot be changed.</small>
                        </div>

                        <!-- PHONE -->
                        <div>
                            <label asp-for="PhoneNumber" class="block font-medium text-gray-700"></label>
                            <input asp-for="PhoneNumber"
                                   class="mt-1 w-full border border-gray-300 rounded-lg p-2 focus:ring-2 focus:ring-blue-500"
                                   placeholder="e.g., 09-1234-56789" />
                            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- CREATED DATE -->
                        <div>
                            <label asp-for="CreatedAt" class="block font-medium text-gray-700"></label>
                            <input asp-for="CreatedAt"
                                   class="mt-1 w-full bg-gray-100 border border-gray-300 rounded-lg p-2"
                                   readonly />
                            <small class="text-gray-500 text-sm">Your account creation date.</small>
                        </div>

                    </div>

                    <input type="hidden" asp-for="CustomerId" />

                    <div class="mt-6">
                        <button type="submit" class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition">
                            <i class="bi bi-save mr-2"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- RIGHT COLUMN -->
        <div class="lg:col-span-5">
            <div class="bg-white shadow-md rounded-xl p-6 border border-gray-100">

                <h4 class="text-xl font-semibold text-gray-700 mb-4">
                    <i class="fas fa-bolt mr-1"></i> Quick Actions
                </h4>

                <hr class="border-gray-200 mb-4" />

                <!-- Dashboard -->
                <a class="w-full block bg-indigo-600 text-white text-center py-3 rounded-lg mb-3 hover:bg-indigo-700 transition"
                   asp-controller="Customer" asp-action="Dashboard">
                    <i class="fas fa-list mr-1"></i> My Dashboard
                </a>

                <!-- My Bookings -->
                <a class="w-full block bg-indigo-600 text-white text-center py-3 rounded-lg mb-3 hover:bg-indigo-700 transition"
                   asp-controller="Booking" asp-action="MyBookings">
                    <i class="fas fa-ticket-alt mr-1"></i> My Booking List
                </a>

                <!-- Browse Events -->
                <a class="w-full block bg-indigo-600 text-white text-center py-3 rounded-lg mb-3 hover:bg-indigo-700 transition"
                   asp-controller="Event" asp-action="Index">
                    <i class="fas fa-calendar-check mr-1"></i> Browse Events
                </a>

                <a class="w-full block bg-indigo-600 text-white text-center py-3 rounded-lg hover:bg-indigo-700 transition"
                   asp-controller="Account" asp-action="EditAccount">
                    <i class="bi bi-person-circle"></i> Edit Your Account
                </a>

                

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
