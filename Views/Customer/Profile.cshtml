@model OnlineTicket.Models.CustomerEditVM

@{
    ViewData["Title"] = "My Profile";
}
<link rel="stylesheet" href="~/css/customerprofile.css" asp-append-version="true" />

<div class="container py-5">
    <div class="row g-4">

        <!-- LEFT COLUMN: Profile Form -->
        <div class="col-lg-7">
            <div class="info-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="section-heading">@ViewData["Title"]</h4>
                </div>

                <hr class="mt-0" style="border-color: var(--accent-light);" />

                @if (TempData["ProfileSuccess"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> @TempData["ProfileSuccess"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Profile" method="post" novalidate>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="FullName" class="form-label fw-bold"></label>
                            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                            <span asp-validation-for="FullName" class="text-danger small mt-1"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control bg-light" readonly />
                            <small class="form-text text-muted">Email cannot be changed.</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., (123) 456-7890" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small mt-1"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="CreatedAt" class="form-label fw-bold"></label>
                            <input asp-for="CreatedAt" class="form-control bg-light" readonly />
                            <small class="form-text text-muted">Your account creation date.</small>
                        </div>
                    </div>

                    <input type="hidden" asp-for="CustomerId" />

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-action-primary fw-bold">
                            <i class="bi bi-save me-2"></i> Save Changes
                        </button>
                    </div>

                </form>
            </div>
        </div>

        <!-- RIGHT COLUMN: Quick Actions -->
        <div class="col-lg-5">
            <div class="overview-card">

                <h4 class="section-heading mb-3"><i class="fas fa-bolt me-1"></i> Quick Actions</h4>
                <hr class="mt-0 mb-4" style="border-color: var(--accent-light);" />
                <a class="btn btn-action-secondary w-100 mb-2" asp-controller="Customer" asp-action="Dashboard">
                    <i class="fas fa-list me-1"></i> My Dashboard
                </a>
                <!-- My Booking List -->
                <a class="btn btn-action-secondary w-100 mb-2" asp-controller="Booking" asp-action="MyBookings">
                    <i class="fas fa-list me-1"></i> My Booking List
                </a>

                <!-- Browse Events -->
                <a class="btn btn-action-secondary w-100 mb-2" asp-controller="Event" asp-action="Index">
                    <i class="fas fa-calendar-check me-1"></i> Browse Events
                </a>

                <!-- Recent Events -->
                <a class="btn btn-action-secondary w-100 mb-2" asp-controller="Event" asp-action="RecentEvents">
                    <i class="fas fa-history me-1"></i> Recent Events
                </a>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
