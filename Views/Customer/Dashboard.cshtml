@model OnlineTicket.Models.CustomerDashboardVM

@{

    ViewData["Title"] = "Customer Dashboard";
}

<div class="container py-5">
    <h2 class="mb-4">Welcome to your Dashboard</h2>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title">Total Bookings</h5>
                    <h2 class="card-text">@Model.TotalBookings</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <h2 class="card-text">@Model.UpcomingEvents.Count</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-center shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title">Recent Bookings</h5>
                    <h2 class="card-text">@Model.RecentBookings.Count</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm p-3">
                <div class="card-body d-flex justify-content-around flex-wrap">
                    <a asp-controller="Event" asp-action="Index" class="btn btn-primary m-2">
                        <i class="bi bi-search me-1"></i> Browse Events
                    </a>
                    <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-success m-2">
                        <i class="bi bi-card-list me-1"></i> My Booking List
                    </a>
                    <a asp-controller="Customer" asp-action="Profile" class="btn btn-warning m-2">
                        <i class="bi bi-person-circle me-1"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Bookings Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm p-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Recent Bookings</h5>

                    @if (Model.RecentBookings.Count == 0)
                    {
                        <p>You have no recent bookings.</p>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Event</th>
                                    <th>Booking Date</th>
                                    <th>Payment Status</th>
                                    <th>Tickets</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in Model.RecentBookings)
                                {
                                    <tr>
                                        <td>@booking.Event.Title</td>
                                        <td>@booking.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>@booking.PaymentStatus</td>
                                        <td>@booking.Tickets.Count</td>
                                        <td>
                                            <a asp-controller="Booking" asp-action="MyBookings" asp-route-id="@booking.BookingId" class="btn btn-sm btn-info">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
