@model OnlineTicket.ViewModels.OrganizerProfileViewModel
@{
    ViewData["Title"] = "Edit Your Profile";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-lg mt-10 border-t-4 border-indigo-600">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Edit Organizer Profile</h1>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 text-green-800 p-3 rounded mb-4 flex justify-between items-center">
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 text-red-800 p-3 rounded mb-4 flex justify-between items-center">
            <span>@TempData["ErrorMessage"]</span>
            <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }
    <p class="text-gray-600 mb-6">Update your organization's details below. This information will be visible to your customers.</p>

    <form asp-action="EditProfile" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 font-medium p-3 bg-red-50 rounded-lg"></div>

        <div class="space-y-6">
            <!-- Organizer Name -->
            <div>
                <label asp-for="OrganizerName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="OrganizerName" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" />
                <span asp-validation-for="OrganizerName" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Address -->
            <div>
                <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Address" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" />
                <span asp-validation-for="Address" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Phone -->
            <div>
                <label asp-for="Phone" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Phone" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" />
                <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" />
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
        </div>

        <div class="mt-8 flex justify-end space-x-4">
            <a asp-action="Dashboard" class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition duration-150 font-semibold">
                Cancel
            </a>
            <button type="submit" class="px-6 py-3 bg-indigo-600 text-white rounded-lg shadow-md hover:bg-indigo-700 transition duration-150 font-semibold">
                Update Profile
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}