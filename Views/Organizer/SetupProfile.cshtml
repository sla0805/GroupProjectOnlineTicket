@model OnlineTicket.ViewModels.OrganizerProfileViewModel
@{
    ViewData["Title"] = "Complete Your Profile";
    // This view will use your main _Layout.cshtml
}

<div classclass="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-lg mt-10 border-t-4 border-indigo-600">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">Complete Your Organizer Profile</h1>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 text-green-800 p-3 rounded mb-4 flex justify-between items-center">
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 text-red-800 p-3 rounded mb-4 flex justify-between items-center">
            <span>@TempData["ErrorMessage"]</span>
            <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }
    <p class="text-gray-600 mb-6">Welcome! Before you can create events, we need a few more details about your organization.</p>

    <form asp-action="SetupProfile" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 font-medium p-3 bg-red-50 rounded-lg"></div>

        <div class="space-y-6">
            <!-- Organizer Name -->
            <div>
                <label asp-for="OrganizerName" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="OrganizerName" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" placeholder="e.g., StarEvents Pvt Ltd" />
                <span asp-validation-for="OrganizerName" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Address -->
            <div>
                <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Address" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" placeholder="123 Main St, Colombo 07" />
                <span asp-validation-for="Address" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Phone -->
            <div>
                <label asp-for="Phone" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Phone" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" placeholder="077-123-4567" />
                <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 block"></span>
            </div>

            <!-- Email -->
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Email" class="mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 p-3 border" placeholder="contact@starevents.com" />
                <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
            </div>
        </div>

        <div class="mt-8">
            <button type="submit" class="w-full px-6 py-3 bg-indigo-600 text-white rounded-lg shadow-md hover:bg-indigo-700 transition duration-150 font-semibold text-lg">
                Save Profile and Go to Dashboard
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}