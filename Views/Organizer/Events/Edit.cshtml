@model OnlineTicket.ViewModels.EventEditViewModel
@{
    ViewData["Title"] = "Edit Event";
}

<div class="container mx-auto p-6">
    <div class="bg-white/20 backdrop-blur-md rounded-xl shadow-lg overflow-hidden">
        <!-- Banner Image -->
        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
        {
            <div class="w-full h-64 relative">
                <img src="@Model.ExistingImagePath" class="w-full h-full object-cover" alt="Event Banner" />
                <div class="absolute inset-0 bg-black/25 flex items-center justify-center text-white text-2xl font-bold">
                    Update Event
                </div>
            </div>
        }
        else
        {
            <div class="w-full h-64 bg-gray-200 flex items-center justify-center text-gray-500 text-2xl font-bold">
                Update Event
            </div>
        }

        <div class="p-6 space-y-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 text-green-800 p-3 rounded mb-4 flex justify-between items-center">
                    <span>@TempData["SuccessMessage"]</span>
                    <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-100 text-red-800 p-3 rounded mb-4 flex justify-between items-center">
                    <span>@TempData["ErrorMessage"]</span>
                    <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
                </div>
            }

            <form asp-action="EditEvent" method="post" enctype="multipart/form-data" class="space-y-4">
                <input type="hidden" asp-for="EventId" />

                <div>
                    <label class="block font-semibold text-gray-700">Title</label>
                    <input asp-for="Title" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block font-semibold text-gray-700">Description</label>
                    <textarea asp-for="Description" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-indigo-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label class="block font-semibold text-gray-700">Event Date & Time</label>
                    <input asp-for="EventDate" type="datetime-local" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="EventDate" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block font-semibold text-gray-700">Ticket Price</label>
                        <input asp-for="TicketPrice" type="number" step="0.01" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-green-500" />
                        <span asp-validation-for="TicketPrice" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label class="block font-semibold text-gray-700">Total Seats</label>
                        <input asp-for="TotalSeats" type="number" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-green-500" />
                        <span asp-validation-for="TotalSeats" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block font-semibold text-gray-700">Category</label>
                        <select asp-for="CategoryId" asp-items="Model.Categories" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-indigo-500"></select>
                    </div>
                    <div>
                        <label class="block font-semibold text-gray-700">Venue</label>
                        <select asp-for="VenueId" asp-items="Model.Venues" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-indigo-500"></select>
                    </div>
                </div>

                <div>
                    <label class="block font-semibold text-gray-700">Change Banner Image</label>
                    <input asp-for="ImageFile" type="file" class="w-full border border-gray-300 px-3 py-2 rounded focus:ring-2 focus:ring-indigo-500" />
                </div>

                <div class="flex gap-4 mt-6">
                    <button type="submit" class="px-6 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition">Update Event</button>
                    <a asp-action="Events" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">Back to Events</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
