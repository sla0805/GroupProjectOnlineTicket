@model OnlineTicket.ViewModels.PromotionViewModel

<div class="max-w-4xl mx-auto mt-8 p-6 bg-white rounded-2xl shadow-lg">
    <h2 class="text-3xl font-bold text-blue-900 mb-6">Edit Promotion</h2>

    <form asp-action="EditPromotion" method="post" class="space-y-6">
        <input type="hidden" asp-for="PromotionId" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-gray-700 font-medium mb-1">Promotion Name</label>
                <input asp-for="Name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-1">Promotion Code</label>
                <input asp-for="Code" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <label class="block text-gray-700 font-medium mb-1">Discount (%)</label>
                <input asp-for="DiscountPercentage" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-1">Start Date</label>
                <input asp-for="StartDate" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-1">End Date</label>
                <input asp-for="EndDate" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label class="block text-gray-700 font-medium mb-1">Select Event</label>
                <select asp-for="EventId" asp-items="Model.Events" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"></select>
            </div>
            <div>
                <label class="block text-gray-700 font-medium mb-1">Ticket Type</label>
                <select asp-for="TicketTypeId" asp-items="Model.TicketTypes" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"></select>
            </div>
        </div>

        <div class="flex items-center gap-2">
            <input asp-for="IsActive" type="checkbox" class="h-5 w-5 text-blue-600 rounded focus:ring-2 focus:ring-blue-500" />
            <label class="text-gray-700 font-medium">Active</label>
        </div>

        <div class="flex flex-col md:flex-row gap-4 mt-6">
            <button type="submit" class="bg-blue-900 text-white px-6 py-3 rounded-lg shadow hover:bg-blue-800 hover:scale-105 transition transform font-semibold">
                Save Changes
            </button>
            <a asp-action="Promotions" class="bg-gray-600 text-white px-6 py-3 rounded-lg shadow hover:bg-gray-700 hover:scale-105 transition transform font-semibold text-center">
                Cancel
            </a>
        </div>
    </form>
