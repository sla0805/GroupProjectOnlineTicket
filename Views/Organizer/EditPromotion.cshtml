@model OnlineTicket.ViewModels.PromotionViewModel
<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="mb-3">Edit Promotion</h3>
        <form asp-action="EditPromotion" method="post">
            <input type="hidden" asp-for="PromotionId" />


            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Promotion Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Promotion Code</label>
                    <input asp-for="Code" class="form-control" />
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Discount (%)</label>
                    <input asp-for="DiscountPercentage" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Start Date</label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date</label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Select Event</label>
                    <select asp-for="EventId" asp-items="Model.Events" class="form-select"></select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ticket Type</label>
                    <select asp-for="TicketTypeId" asp-items="Model.TicketTypes" class="form-select"></select>
                </div>
            </div>


            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">Active</label>
            </div>


            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Promotions" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>