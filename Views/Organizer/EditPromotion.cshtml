@model OnlineTicket.ViewModels.PromotionViewModel
@{
    ViewData["Title"] = "Edit Promotion";
}

<div class="max-w-3xl mx-auto p-6 bg-white rounded-xl shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-blue-900">Edit Promotion</h1>

    <form asp-action="EditPromotion" method="post" class="space-y-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PromotionId" />

        <div>
            <label asp-for="Name" class="block text-gray-700 font-medium">Promotion Name</label>
            <input asp-for="Name" class="w-full border rounded p-2 mt-1" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Code" class="block text-gray-700 font-medium">Promo Code</label>
            <input asp-for="Code" class="w-full border rounded p-2 mt-1" />
            <span asp-validation-for="Code" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="DiscountPercentage" class="block text-gray-700 font-medium">Discount (%)</label>
            <input asp-for="DiscountPercentage" type="number" min="1" max="100" class="w-full border rounded p-2 mt-1" />
            <span asp-validation-for="DiscountPercentage" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="EventId" class="block text-gray-700 font-medium">Event</label>
            <select asp-for="EventId" asp-items="Model.Events" id="EventId" class="w-full border rounded p-2 mt-1">
                <option value="">-- Select Event --</option>
            </select>
            <span asp-validation-for="EventId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="TicketTypeId" class="block text-gray-700 font-medium">Ticket Type</label>
            <select asp-for="TicketTypeId" asp-items="Model.TicketTypes" id="TicketTypeId" class="w-full border rounded p-2 mt-1">
                <option value="">-- Select Ticket Type --</option>
            </select>
            <span asp-validation-for="TicketTypeId" class="text-red-500 text-sm"></span>
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                <label asp-for="StartDate" class="block text-gray-700 font-medium">Start Date</label>
                <input asp-for="StartDate" type="date" class="w-full border rounded p-2 mt-1" />
                <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
            </div>
            <div>
                <label asp-for="EndDate" class="block text-gray-700 font-medium">End Date</label>
                <input asp-for="EndDate" type="date" class="w-full border rounded p-2 mt-1" />
                <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex items-center gap-2 mt-2">
            <input asp-for="IsActive" type="checkbox" class="rounded" />
            <label asp-for="IsActive" class="text-gray-700 font-medium">Active</label>
        </div>

        <div class="flex justify-end mt-6 gap-2">
            <a asp-action="Promotions" class="px-4 py-2 border rounded text-gray-700 hover:bg-gray-100">Cancel</a>
            <button type="submit" class="px-6 py-2 bg-blue-900 text-white rounded hover:bg-blue-800">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // load ticket types when event changes (edit page)
        const loadTicketTypes = (eventId, selectedTicketTypeId) => {
            const ddl = document.getElementById("TicketTypeId");
            ddl.innerHTML = '<option value="">-- Select Ticket Type --</option>';
            if (!eventId) return;

            fetch(`/Organizer/GetTicketTypesByEvent?eventId=${eventId}`)
                .then(r => r.json())
                .then(data => {
                    data.forEach(t => {
                        const opt = document.createElement("option");
                        opt.value = t.ticketTypeId;
                        opt.text = t.name;
                        if (selectedTicketTypeId && selectedTicketTypeId == t.ticketTypeId) opt.selected = true;
                        ddl.appendChild(opt);
                    });
                })
                .catch(err => console.error(err));
        };

        document.getElementById("EventId")?.addEventListener("change", function () {
            loadTicketTypes(this.value, null);
        });

        // on load, if an event is pre-selected, load its ticket types and select the current one
        (function init() {
            const eventSelect = document.getElementById("EventId");
            const ticketSelect = document.getElementById("TicketTypeId");
            if (eventSelect && eventSelect.value) {
                const selectedTicketTypeId = ticketSelect.getAttribute("data-val"); // model binder might set value
                loadTicketTypes(eventSelect.value, selectedTicketTypeId);
            }
        })();
    </script>
}