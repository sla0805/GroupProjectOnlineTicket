@model OnlineTicket.Models.PaymentVM
@{
    ViewData["Title"] = "Secure Checkout (Step 2)";
    var eventTitle = ViewBag.EventTitle;
    var eventImage = ViewBag.EventImage;
    var venueName = ViewBag.VenueName;
    var eventDate = (DateTime)ViewBag.EventDate;
    var eventId = ViewBag.EventId;
}

<!-- Tailwind CDN (remove in production if precompiled) -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-5xl mx-auto px-4 py-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Event Summary Sidebar -->
        <div class="lg:col-span-5 relative rounded-2xl overflow-hidden shadow-lg h-full">
            <img src="@(eventImage ?? "https://via.placeholder.com/600x400?text=Event+Image")" alt="@eventTitle"
                 class="w-full h-full object-cover">

            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent p-6 flex flex-col justify-end text-white">
                <h3 class="text-2xl font-bold mb-1">@eventTitle</h3>
                <div class="flex items-center gap-2 text-sm text-white/80">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-10H9v4h2V8zm0 6H9v2h2v-2z" clip-rule="evenodd" />
                    </svg>
                    @venueName
                </div>
                <div class="flex items-center gap-2 text-sm text-white/80 mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M6 2a1 1 0 00-1 1v1H3a2 2 0 00-2 2v10a1 1 0 001 1h14a1 1 0 001-1V6a2 2 0 00-2-2h-2V3a1 1 0 00-1-1H6z" />
                    </svg>
                    @eventDate.ToString("MMM dd, yyyy @ hh:mm tt")
                </div>
            </div>
        </div>

        <!-- Payment Form -->
        <div class="lg:col-span-7 bg-white rounded-2xl shadow-lg p-6 lg:p-10">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-bold text-slate-800">Secure Payment Details</h2>
                <span class="text-sm text-slate-500">Step 2 of 2</span>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <input type="hidden" asp-for="BookingId" />
                <input type="hidden" asp-for="Amount" />

                <!-- Amount summary -->
                <div class="bg-blue-50 p-4 rounded-xl text-center">
                    <span class="block text-xs font-semibold text-blue-500 uppercase">Total Amount</span>
                    <div class="text-2xl font-bold text-slate-800 my-1">@Model.Amount.ToString("C")</div>
                </div>

                <!-- Payment Method -->
                <div>
                    <label class="block text-sm font-semibold text-slate-600 mb-2">Select Payment Method</label>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <input type="radio" asp-for="PaymentMethod" id="pm_visa" value="Visa" class="hidden peer" checked>
                            <label for="pm_visa" class="flex items-center justify-center gap-2 p-4 border rounded-xl cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20"><path d="M2 5h16v10H2z" /></svg>
                                Visa
                            </label>
                        </div>
                        <div>
                            <input type="radio" asp-for="PaymentMethod" id="pm_master" value="MasterCard" class="hidden peer">
                            <label for="pm_master" class="flex items-center justify-center gap-2 p-4 border rounded-xl cursor-pointer peer-checked:border-blue-500 peer-checked:bg-blue-50">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500" fill="currentColor" viewBox="0 0 20 20"><path d="M2 5h16v10H2z" /></svg>
                                MasterCard
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="PaymentMethod" class="text-sm text-red-600 mt-1 block"></span>
                </div>

                <hr class="border-t border-slate-200 my-4">

                <!-- Card Details -->
                <div class="space-y-4">
                    <div>
                        <label asp-for="CardNumber" class="block text-sm font-semibold text-slate-600 mb-1">Card Number</label>
                        <input asp-for="CardNumber" maxlength="19" placeholder="0000 0000 0000 0000" required
                               class="w-full border border-slate-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-200 focus:outline-none" />
                        <span asp-validation-for="CardNumber" class="text-sm text-red-600 mt-1 block"></span>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label asp-for="ExpiryDate" class="block text-sm font-semibold text-slate-600 mb-1">Expiry (MM/YY)</label>
                            <input asp-for="ExpiryDate" maxlength="5" placeholder="MM/YY" required
                                   class="w-full border border-slate-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-200 focus:outline-none" />
                            <span asp-validation-for="ExpiryDate" class="text-sm text-red-600 mt-1 block"></span>
                        </div>
                        <div>
                            <label asp-for="CVV" class="block text-sm font-semibold text-slate-600 mb-1">CVV</label>
                            <input asp-for="CVV" type="password" maxlength="4" placeholder="123" required
                                   class="w-full border border-slate-200 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-200 focus:outline-none" />
                            <span asp-validation-for="CVV" class="text-sm text-red-600 mt-1 block"></span>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex justify-between items-center mt-6">
                    <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@eventId"
                       class="px-6 py-2 rounded-full border border-slate-300 hover:bg-slate-50 text-sm font-medium">
                        Go Back
                    </a>
                    <button type="submit"
                            class="px-6 py-2 rounded-full bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm">
                        Pay @Model.Amount.ToString("C")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
