@model PaymentVM
@{
    ViewData["Title"] = "Pay Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Pay" method="post">
    <input type="hidden" asp-for="BookingId" />

    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Provider" class="form-label"></label>
        <select asp-for="Provider" class="form-control">
            <option value="">-- Select Payment Provider --</option>
            <option value="Stripe">Stripe</option>
            <option value="PayPal">PayPal</option>
            <option value="Visa">Visa</option>
            <option value="CreditCard">CreditCard</option>


        </select>
        <span asp-validation-for="Provider" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Pay Now</button>
</form>
