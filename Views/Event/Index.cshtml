@model IEnumerable<OnlineTicket.Models.Event>
@{
    ViewData["Title"] = "Browse Events";
    var page = ViewBag.Page as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var currentCategoryId = ViewBag.CategoryId?.ToString() ?? "";
    var currentVenueId = ViewBag.VenueId?.ToString() ?? "";
    var currentSearch = ViewBag.Search ?? "";
    var currentDateString = ViewBag.DateString ?? "";
}

<!-- Tailwind CDN -->
<script src="https://cdn.tailwindcss.com"></script>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

    <!-- Header + Search -->
    <div class="flex flex-col lg:flex-row items-end justify-between gap-6 mb-6">
        <div class="flex-1">
            <h1 class="text-3xl font-extrabold text-sky-700 mb-1">Discover Events</h1>
            <p class="text-sm text-slate-500">Find your next experience by category, location, or date.</p>
        </div>

        <div class="w-full lg:w-1/3">
            <form method="get" class="flex items-center">
                <div class="flex items-center w-full bg-white shadow-sm rounded-lg overflow-hidden">
                    <span class="px-3 text-slate-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z" />
                        </svg>
                    </span>
                    <input name="search" type="search" value="@currentSearch"
                           class="w-full px-3 py-2 focus:outline-none" placeholder="Search event titles, venues..." />
                    <button type="submit" class="bg-sky-600 hover:bg-sky-700 text-white px-4 py-2">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <hr class="my-6 border-slate-200" />

    <!-- Filters -->
    <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8 items-end">
        <div>
            <label class="block text-xs font-semibold text-slate-600 mb-1">Category</label>
            <select name="categoryId" class="w-full bg-white border border-slate-200 rounded-md px-3 py-2 text-sm">
                <option value="">All categories</option>
              @foreach (var i in (IEnumerable<SelectListItem>)ViewBag.CategoryList)
{
                    <option value="@i.Value" selected="@(i.Value == currentCategoryId)">@i.Text</option>
                }

            </select>
        </div>

        <div>
            <label class="block text-xs font-semibold text-slate-600 mb-1">Venue</label>
            <select name="venueId" class="w-full bg-white border border-slate-200 rounded-md px-3 py-2 text-sm">
                <option value="">All venues</option>
               @foreach (var i in (IEnumerable<SelectListItem>)ViewBag.VenueList)
                {
                    <option value="@i.Value" selected="@(i.Value == currentVenueId)">@i.Text</option>

                }


            </select>
        </div>

        <div>
            <label class="block text-xs font-semibold text-slate-600 mb-1">Date</label>
            <input name="date" type="date" value="@currentDateString"
                   class="w-full bg-white border border-slate-200 rounded-md px-3 py-2 text-sm" />
        </div>

        <div class="flex gap-2">
            <button type="submit" class="w-1/2 bg-slate-800 hover:bg-slate-900 text-white rounded-md px-3 py-2 text-sm font-medium">
                Filter
            </button>
            <a asp-controller="Event" asp-action="Index"
               class="w-1/2 inline-flex items-center justify-center border border-slate-200 rounded-md px-3 py-2 text-sm text-slate-700 hover:bg-slate-50">
                Clear
            </a>
        </div>
    </form>

    <!-- Events List -->
    @if (Model.Any())
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var evt in Model)
            {
                <div class="bg-white rounded-2xl shadow-sm overflow-hidden flex flex-col">
                    <div class="h-44 w-full overflow-hidden relative">
                        <img src="@(string.IsNullOrEmpty(evt.ImagePath) ? "https://via.placeholder.com/600x400?text=Event+Image" : evt.ImagePath)"
                             alt="@evt.Title"
                             class="object-cover w-full h-full" />
                    </div>

                    <div class="p-4 flex-1 flex flex-col">
                        <h3 class="text-lg font-semibold text-slate-800 truncate">@evt.Title</h3>

                        <div class="flex items-center justify-between mt-2">
                            <p class="text-sm text-slate-500">
                                <svg class="inline-block w-4 h-4 mr-1 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7" />
                                </svg>
                                @(evt.Venue?.Name)
                            </p>
                            <p class="text-sm font-semibold text-emerald-600">@evt.TicketPrice.ToString("C")</p>
                        </div>

                        <p class="text-sm text-sky-700 font-medium mt-3">
                            <svg class="inline-block w-4 h-4 mr-1 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M8 7V3m8 4V3M3 11h18M5 21h14a2 2 0 002-2V7H3v12a2 2 0 002 2z" />
                            </svg>
                            @evt.EventDate.ToString("MMM dd, yyyy • HH:mm")
                        </p>

                        <div class="mt-4 mt-auto">
                            <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@evt.EventId"
                               class="inline-flex items-center justify-center w-full py-2 rounded-full text-sm font-semibold bg-white border border-slate-200 hover:bg-slate-50 text-sky-700">
                                View Details / Book
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="mt-8 bg-sky-50 border border-sky-100 rounded-lg p-6 text-center">
            <h3 class="text-lg font-semibold text-sky-700 mb-2">No Events Found</h3>
            <p class="text-sm text-slate-500 mb-4">Try clearing your filters or adjusting your search terms.</p>
            <a asp-controller="Event" asp-action="Index" class="inline-block bg-sky-600 hover:bg-sky-700 text-white px-4 py-2 rounded-md">Clear Filters</a>
        </div>
    }

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav class="mt-8 flex items-center justify-center" role="navigation" aria-label="Pagination">
            <ul class="inline-flex -space-x-px">
                <li>
                    <a class="px-3 py-2 rounded-l-md border border-slate-200 bg-white text-slate-600 hover:bg-slate-50 @(page <= 1 ? "opacity-50 pointer-events-none" : "")"
                       href="?page=@(page-1)&categoryId=@currentCategoryId&venueId=@currentVenueId&date=@currentDateString&search=@currentSearch"
                       aria-label="Previous">
                        &laquo;
                    </a>
                </li>

                @for (int p = 1; p <= totalPages; p++)
                {
                    var active = p == page;
                    <li>
                        <a class="px-3 py-2 border border-slate-200 bg-white hover:bg-slate-50 @(active ? "bg-sky-600 text-white" : "text-slate-600")"
                           href="?page=@p&categoryId=@currentCategoryId&venueId=@currentVenueId&date=@currentDateString&search=@currentSearch">@p</a>
                    </li>
                }

                <li>
                    <a class="px-3 py-2 rounded-r-md border border-slate-200 bg-white text-slate-600 hover:bg-slate-50 @(page >= totalPages ? "opacity-50 pointer-events-none" : "")"
                       href="?page=@(page+1)&categoryId=@currentCategoryId&venueId=@currentVenueId&date=@currentDateString&search=@currentSearch"
                       aria-label="Next">
                        &raquo;
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>
