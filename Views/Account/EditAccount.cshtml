@model EditAccountViewModel
@{
    ViewData["Title"] = "Edit Account";
}

<div class="max-w-3xl mx-auto p-8 bg-white shadow-lg rounded-2xl">

    <h1 class="text-3xl font-bold text-indigo-700 mb-6 text-center">
        Edit Your Account
    </h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 text-green-800 p-3 rounded mb-4 flex justify-between items-center">
            <span>@TempData["SuccessMessage"]</span>
            <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 text-red-800 p-3 rounded mb-4 flex justify-between items-center">
            <span>@TempData["ErrorMessage"]</span>
            <button type="button" class="ml-4 font-bold" onclick="this.parentElement.style.display='none'">×</button>
        </div>
    }

    <form asp-action="EditAccount" method="post" class="space-y-8">
        <input type="hidden" asp-for="Id" />

        <!-- ============================
             SECTION 1: PROFILE DETAILS
        ============================= -->
        <div class="p-6 border rounded-xl bg-gray-50 shadow-sm">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fa-solid fa-user text-indigo-600"></i>
                Profile Information
            </h2>

            <div class="space-y-4">
                <div>
                    <label asp-for="UserName" class="block font-medium text-gray-700"></label>
                    <input asp-for="UserName" class="w-full border px-3 py-2 rounded-lg focus:ring focus:ring-indigo-300" />
                    <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block font-medium text-gray-700"></label>
                    <input asp-for="Email" class="w-full border px-3 py-2 rounded-lg focus:ring focus:ring-indigo-300" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PhoneNumber" class="block font-medium text-gray-700"></label>
                    <input asp-for="PhoneNumber" class="w-full border px-3 py-2 rounded-lg focus:ring focus:ring-indigo-300" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                </div>
            </div>
        </div>

        <!-- ============================
             SECTION 2: CHANGE PASSWORD
        ============================= -->
        <div class="p-6 border rounded-xl bg-white shadow-sm">
            <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fa-solid fa-lock text-yellow-500"></i>
                Change Password (Optional)
            </h2>

            <p class="text-gray-500 text-sm mb-4">
                Leave password fields empty if you do not want to change your password.
            </p>

            <div class="space-y-4">
                <div>
                    <label asp-for="CurrentPassword" class="block font-medium text-gray-700"></label>
                    <input asp-for="CurrentPassword" type="password"
                           class="w-full border px-3 py-2 rounded-lg focus:ring focus:ring-yellow-300" />
                    <span asp-validation-for="CurrentPassword" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="NewPassword" class="block font-medium text-gray-700"></label>
                    <input asp-for="NewPassword" type="password"
                           class="w-full border px-3 py-2 rounded-lg focus:ring focus:ring-yellow-300" />
                    <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block font-medium text-gray-700"></label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="w-full border px-3 py-2 rounded-lg focus:ring focus:ring-yellow-300" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>
            </div>
        </div>

        <div class="flex gap-3 pt-4">
            <button type="submit"
                    class="px-5 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                Update Account
            </button>
            <a asp-action="CancelEditAccount" asp-controller="Account"
               class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 transition">
                Back to Dashboard
            </a>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
