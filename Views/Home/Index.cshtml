@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<!-- Hero Section -->
<div class="relative text-center p-10 md:p-20 rounded-3xl mb-10 bg-cover bg-center text-white"
     style="background-image: url('/images/events/iiii.jpg');">

    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/50 rounded-3xl"></div>

    <div class="relative z-10 max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">
            Discover Your Next Experience
        </h1>
        <p class="text-lg md:text-xl mb-6 drop-shadow-md">
            Book tickets for concerts, theatre, cultural events, and workshops.
        </p>

        <!-- Browse Button -->
        <div class="mt-6 flex justify-center">
            <a asp-controller="Account" asp-action="Login"
               class="inline-flex items-center gap-3 px-8 py-3 bg-blue-900 text-white rounded-full
                      text-lg font-semibold shadow-lg hover:bg-blue-800 hover:scale-105
                      transition-all duration-300">
                <i class="fa-solid fa-compass text-xl"></i>
                Browse Events
            </a>
        </div>
    </div>
</div>


<!-- Why Choose StarEvents -->
<div class="max-w-6xl mx-auto px-4 mb-14">
    <h2 class="text-2xl font-light border-b pb-2 mb-6 text-gray-800">
        Why Choose StarEvents? 🎫
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <!-- Feature Template -->
        @foreach (var feature in new[] {
        new { Icon="fa-ticket",        Title="Easy Booking",      Text="Quickly search and book tickets for concerts, theatre, and cultural events with just a few clicks." },
        new { Icon="fa-calendar-check",Title="Up-to-date Schedule",Text="Stay informed with the latest event schedules and never miss out on your favorite performances." },
        new { Icon="fa-shield-halved", Title="Secure Payments",   Text="Enjoy safe and reliable payment options for all your ticket purchases." }
        })
        {
            <div class="bg-gradient-to-tr from-white to-blue-50 rounded-2xl shadow-lg p-6
                        text-center flex flex-col transform transition hover:scale-105 hover:shadow-2xl cursor-pointer">

                <div class="flex justify-center mb-4">
                    <i class="fa-solid @feature.Icon text-blue-900 text-5xl animate-pulse"></i>
                </div>

                <h5 class="font-semibold text-gray-800 mb-2 text-lg">@feature.Title</h5>

                <p class="text-gray-600 text-sm flex-grow">@feature.Text</p>

                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Login"
                       class="inline-block px-4 py-2 bg-blue-900 text-white rounded-lg text-sm font-semibold
                              hover:bg-blue-800 transition">
                        Learn More
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Upcoming Events -->
<div class="max-w-6xl mx-auto px-4 mb-14">
    <h2 class="text-2xl font-light border-b pb-2 mb-6 text-gray-800">Upcoming Events</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Example Event Cards (3 Cards) -->
        @foreach (var e in new[] {
        new { Img="/images/event-concert.jpg", Title="London Jazz Festival",
        Date="Fri, Jul 12", Venue="Southbank Centre, London",
        Desc="Enjoy world-class jazz performances from international and UK artists at iconic venues." },

        new { Img="/images/event-theatre.jpg", Title="Les Misérables - West End",
        Date="Tue, Aug 6", Venue="Queen's Theatre, London",
        Desc="Experience the timeless story of Les Misérables live on the West End stage." },

        new { Img="/images/event-cultural.jpg", Title="Edinburgh Fringe Festival",
        Date="Mon, Aug 12", Venue="Edinburgh, Scotland",
        Desc="Join the world’s largest arts festival featuring theatre, comedy, and cultural performances." }
        })
        {
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col">
                <div class="h-48 overflow-hidden">
                    <img src="@e.Img" class="w-full h-full object-cover" />
                </div>

                <div class="p-4 flex flex-col flex-grow">
                    <h5 class="font-bold text-gray-800 mb-2">@e.Title</h5>

                    <div class="text-gray-500 text-sm flex flex-col mb-3">
                        <span><i class="fa-solid fa-calendar-alt text-blue-900 mr-2"></i>@e.Date</span>
                        <span><i class="fa-solid fa-map-marker-alt text-blue-900 mr-2"></i>@e.Venue</span>
                    </div>

                    <p class="text-gray-600 text-sm mt-auto">@e.Desc</p>
                </div>

                <div class="p-4">
                    <a asp-controller="Account" asp-action="Login"
                       class="w-full bg-blue-900 text-white py-2 rounded-lg text-center
                              hover:bg-blue-800 hover:scale-105 hover:shadow-lg transition flex items-center justify-center gap-2">
                        <i class="fa-solid fa-ticket animate-bounce"></i> Get Tickets
                    </a>
                </div>
            </div>
        }
    </div>
</div>