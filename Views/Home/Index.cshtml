@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="relative text-center p-10 md:p-20 rounded-3xl mb-10 bg-cover bg-center text-white"
     style="background-image: url('/images/concert-hero.jpg');">

    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-50 rounded-3xl"></div>

    <div class="relative z-10 max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">Discover Your Next Experience</h1>
        <p class="text-lg md:text-xl mb-6 drop-shadow-md">
            Book tickets for concerts, theatre, cultural events, and workshops in Sri Lanka.
        </p>

        <a asp-controller="Account" asp-action="Login"
           class="inline-block bg-blue-900 hover:bg-blue-800 text-white py-3 px-6 rounded-lg transition-colors text-lg font-semibold">
            Browse Events
        </a>
    </div>
</div>

<!-- Interactive Platform Info Section -->
<div class="max-w-6xl mx-auto px-4 mb-12">
    <h2 class="text-2xl font-light border-b pb-2 mb-6 text-gray-800">Why Choose StarEvents? 🎫</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Feature 1 -->
        <div class="bg-gradient-to-tr from-white to-blue-50 rounded-2xl shadow-lg p-6 text-center flex flex-col transform transition-transform hover:scale-105 hover:shadow-2xl hover:from-blue-50 hover:to-white duration-300 cursor-pointer">
            <div class="flex justify-center mb-4">
                <i class="fa-solid fa-ticket text-blue-900 text-5xl animate-bounce"></i>
            </div>
            <h5 class="font-semibold text-gray-800 mb-2 text-lg">Easy Booking</h5>
            <p class="text-gray-600 text-sm flex-grow">
                Quickly search and book tickets for concerts, theatre, and cultural events with just a few clicks.
            </p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login"
                   class="inline-block px-4 py-2 bg-blue-900 text-white rounded-lg text-sm font-semibold hover:bg-blue-800 transition-colors">
                    Learn More
                </a>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="bg-gradient-to-tr from-white to-blue-50 rounded-2xl shadow-lg p-6 text-center flex flex-col transform transition-transform hover:scale-105 hover:shadow-2xl hover:from-blue-50 hover:to-white duration-300 cursor-pointer">
            <div class="flex justify-center mb-4">
                <i class="fa-solid fa-calendar-check text-blue-900 text-5xl animate-pulse"></i>
            </div>
            <h5 class="font-semibold text-gray-800 mb-2 text-lg">Up-to-date Schedule</h5>
            <p class="text-gray-600 text-sm flex-grow">
                Stay informed with the latest event schedules and never miss out on your favorite performances.
            </p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login"
                   class="inline-block px-4 py-2 bg-blue-900 text-white rounded-lg text-sm font-semibold hover:bg-blue-800 transition-colors">
                    Learn More
                </a>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="bg-gradient-to-tr from-white to-blue-50 rounded-2xl shadow-lg p-6 text-center flex flex-col transform transition-transform hover:scale-105 hover:shadow-2xl hover:from-blue-50 hover:to-white duration-300 cursor-pointer">
            <div class="flex justify-center mb-4">
                <i class="fa-solid fa-shield-halved text-blue-900 text-5xl animate-bounce"></i>
            </div>
            <h5 class="font-semibold text-gray-800 mb-2 text-lg">Secure Payments</h5>
            <p class="text-gray-600 text-sm flex-grow">
                Enjoy safe and reliable payment options for all your ticket purchases.
            </p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login"
                   class="inline-block px-4 py-2 bg-blue-900 text-white rounded-lg text-sm font-semibold hover:bg-blue-800 transition-colors">
                    Learn More
                </a>
            </div>
        </div>
    </div>
</div>



<!-- Featured/Upcoming Events -->
<div class="max-w-6xl mx-auto px-4 mb-12">
    <h2 class="text-2xl font-light border-b pb-2 mb-6">Upcoming Events</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Event Card Example -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col">
            <div class="h-48 overflow-hidden">
                <img src="/images/event-concert.jpg" alt="Concert Event" class="w-full h-full object-cover">
            </div>
            <div class="p-4 flex flex-col flex-grow">
                <h5 class="font-bold text-gray-800 mb-2">London Jazz Festival</h5>
                <div class="text-gray-500 text-sm flex flex-col mb-3">
                    <span class="mb-1"><i class="fa-solid fa-calendar-alt text-blue-900 mr-2"></i> Fri, Jul 12</span>
                    <span><i class="fa-solid fa-map-marker-alt text-blue-900 mr-2"></i> Southbank Centre, London</span>
                </div>
                <p class="text-gray-600 text-sm mt-auto">
                    Enjoy world-class jazz performances from international and UK artists at iconic London venues.
                </p>
            </div>
            <div class="p-4">
                <a asp-controller="Account" asp-action="Login"
                   class="w-full bg-blue-900 text-white py-2 rounded-lg text-center
              hover:bg-blue-800 hover:scale-105 hover:shadow-lg transition transform duration-300 ease-in-out
              flex items-center justify-center gap-2">
                    <i class="fa-solid fa-ticket animate-bounce"></i>
                    Get Tickets
                </a>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col">
            <div class="h-48 overflow-hidden">
                <img src="/images/event-theatre.jpg" alt="Theatre Event" class="w-full h-full object-cover">
            </div>
            <div class="p-4 flex flex-col flex-grow">
                <h5 class="font-bold text-gray-800 mb-2">West End Theatre: Les Misérables</h5>
                <div class="text-gray-500 text-sm flex flex-col mb-3">
                    <span class="mb-1"><i class="fa-solid fa-calendar-alt text-blue-900 mr-2"></i> Tue, Aug 6</span>
                    <span><i class="fa-solid fa-map-marker-alt text-blue-900 mr-2"></i> Queen's Theatre, London</span>
                </div>
                <p class="text-gray-600 text-sm mt-auto">
                    Experience the timeless story of Les Misérables live on London's famous West End stage.
                </p>
            </div>
            <div class="p-4">
                <a asp-controller="Account" asp-action="Login"
                   class="w-full bg-blue-900 text-white py-2 rounded-lg text-center
              hover:bg-blue-800 hover:scale-105 hover:shadow-lg transition transform duration-300 ease-in-out
              flex items-center justify-center gap-2">
                    <i class="fa-solid fa-ticket animate-bounce"></i>
                    Get Tickets
                </a>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col">
            <div class="h-48 overflow-hidden">
                <img src="/images/event-cultural.jpg" alt="Cultural Event" class="w-full h-full object-cover">
            </div>
            <div class="p-4 flex flex-col flex-grow">
                <h5 class="font-bold text-gray-800 mb-2">Edinburgh Fringe Festival</h5>
                <div class="text-gray-500 text-sm flex flex-col mb-3">
                    <span class="mb-1"><i class="fa-solid fa-calendar-alt text-blue-900 mr-2"></i> Mon, Aug 12</span>
                    <span><i class="fa-solid fa-map-marker-alt text-blue-900 mr-2"></i> Edinburgh, Scotland</span>
                </div>
                <p class="text-gray-600 text-sm mt-auto">
                    Join the world’s largest arts festival featuring comedy, theatre, music, and cultural performances across Edinburgh.
                </p>
            </div>
            <div class="p-4">
                <a asp-controller="Account" asp-action="Login"
                   class="w-full bg-blue-900 text-white py-2 rounded-lg text-center
              hover:bg-blue-800 hover:scale-105 hover:shadow-lg transition transform duration-300 ease-in-out
              flex items-center justify-center gap-2">
                    <i class="fa-solid fa-ticket animate-bounce"></i>
                    Get Tickets
                </a>
            </div>
        </div>

    </div>
</div>
