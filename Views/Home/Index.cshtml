@{
    ViewData["Title"] = "Find Your Next Event";
}

<div class="hero-glass text-center p-5 rounded-3 mb-5"
     style="background-image: url('/images/concert-hero.jpg'); background-size: cover; background-position: center; color: white;">

    <div class="hero-overlay-dark"></div>

    <div class="container position-relative z-1">

        <h1 class="display-4 fw-bold text-shadow-lg">Discover Your Next Experience</h1>
        <p class="lead fs-4 text-shadow-md">Book tickets for the best concerts, theatre, and cultural events in Sri Lanka.</p>
        <hr class="my-4 border-light opacity-50">

        <form class="d-flex justify-content-center glass-search-bar p-3 rounded-4 shadow-lg-soft"
              role="search"
              asp-controller="Event"
              asp-action="Search">

            <div class="input-group" style="max-width: 700px;">
                <input class="form-control form-control-lg me-2 border-0 bg-transparent text-white placeholder-light"
                       type="search"
                       name="query"
                       placeholder="Search for events, artists, or venues..."
                       aria-label="Search">

                <button class="btn btn-primary btn-lg rounded-pill px-4" type="submit">
                    <i class="fa-solid fa-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>
<div class="container mt-5 py-5">
    <h2 class="pb-3 border-bottom fw-light">Browse by Category 🚀</h2>

    <div class="d-flex flex-wrap gap-3 mt-4">
        <a href="#" class="btn btn-outline-primary btn-lg rounded-pill category-pill">Concerts</a>
        <a href="#" class="btn btn-outline-primary btn-lg rounded-pill category-pill">Theatre</a>
        <a href="#" class="btn btn-outline-primary btn-lg rounded-pill category-pill">Cultural</a>
        <a href="#" class="btn btn-outline-primary btn-lg rounded-pill category-pill">Workshops</a>
        <a href="#" class="btn btn-outline-primary btn-lg rounded-pill category-pill">Festivals</a>
    </div>
</div>

<div class="container mt-5">
    <h2 class="pb-3 border-bottom fw-light">Upcoming Events </h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">

        <div class="col">
            {{-- Added 'event-card-modern' for custom hover and image styling --}}
            <div class="card h-100 shadow-lg border-0 event-card-modern">
                <div class="card-img-wrapper">
                    <img src="/images/event-concert.jpg" class="card-img-top" alt="Concert Event">
                </div>
                <div class="card-body">
                    <h5 class="card-title fw-bold">Galle Music Festival</h5>
                    <p class="card-text text-muted small d-flex flex-column">
                        <span class="mb-1"><i class="fa-solid fa-calendar-alt text-primary me-2"></i> Sat, Nov 15</span>
                        <span><i class="fa-solid fa-map-marker-alt text-primary me-2"></i> Galle Fort</span>
                    </p>
                    <p class="card-text small text-secondary mt-3">Experience the annual music festival with local and international artists.</p>
                </div>
                <div class="card-footer bg-light border-0">
                    <a href="#" class="btn btn-primary w-100 rounded-3">Get Tickets</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-lg border-0 event-card-modern">
                <div class="card-img-wrapper">
                    <img src="/images/event-theatre.jpg" class="card-img-top" alt="Theatre Event">
                </div>
                <div class="card-body">
                    <h5 class="card-title fw-bold">Maname Theatre Show</h5>
                    <p class="card-text text-muted small d-flex flex-column">
                        <span class="mb-1"><i class="fa-solid fa-calendar-alt text-primary me-2"></i> Fri, Nov 21</span>
                        <span><i class="fa-solid fa-map-marker-alt text-primary me-2"></i> Lionel Wendt, Colombo</span>
                    </p>
                    <p class="card-text small text-secondary mt-3">A classic tale brought to life on the big stage. Don't miss this masterpiece.</p>
                </div>
                <div class="card-footer bg-light border-0">
                    <a href="#" class="btn btn-primary w-100 rounded-3">Get Tickets</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-lg border-0 event-card-modern">
                <div class="card-img-wrapper">
                    <img src="/images/event-cultural.jpg" class="card-img-top" alt="Cultural Event">
                </div>
                <div class="card-body">
                    <h5 class="card-title fw-bold">Kandy Esala Perahera</h5>
                    <p class="card-text text-muted small d-flex flex-column">
                        <span class="mb-1"><i class="fa-solid fa-calendar-alt text-primary me-2"></i> Mon, Nov 24</span>
                        <span><i class="fa-solid fa-map-marker-alt text-primary me-2"></i> Kandy</span>
                    </p>
                    <p class="card-text small text-secondary mt-3">Book your viewing gallery seats for the grand cultural pageant.</p>
                </div>
                <div class="card-footer bg-light border-0">
                    <a href="#" class="btn btn-primary w-100 rounded-3">Book Seats</a>
                </div>
            </div>
        </div>

    </div>
</div>

