@{
    ViewData["Title"] = "Contact Us";
}

<div class="max-w-6xl mx-auto px-4 py-12 space-y-12">

    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4 drop-shadow-lg">Get in Touch with StarEvents</h1>
        <p class="text-lg md:text-xl text-gray-700 drop-shadow-md">
            Have questions, feedback, or need support? Our team is here to help.
        </p>
    </div>

    <!-- Contact Info & Form Section -->
    <div class="grid md:grid-cols-2 gap-12 items-start">

        <!-- Contact Info -->
        <div class="space-y-6">
            <h2 class="text-2xl font-semibold text-blue-900 mb-4">Our Contact Details</h2>

            <div class="flex items-start space-x-4">
                <i class="fa-solid fa-location-dot text-blue-900 text-2xl mt-1"></i>
                <div>
                    <h3 class="font-bold text-gray-800">Address</h3>
                    <p class="text-gray-600 text-sm">123 Example Road, Bangkok, Thailand 10500</p>
                </div>
            </div>

            <div class="flex items-start space-x-4">
                <i class="fa-solid fa-phone text-blue-900 text-2xl mt-1"></i>
                <div>
                    <h3 class="font-bold text-gray-800">Phone</h3>
                    <p class="text-gray-600 text-sm">+123456789</p>
                </div>
            </div>

            <div class="flex items-start space-x-4">
                <i class="fa-solid fa-envelope text-blue-900 text-2xl mt-1"></i>
                <div>
                    <h3 class="font-bold text-gray-800">Email</h3>
                    <p class="text-gray-600 text-sm">support@starevents.com</p>
                </div>
            </div>

            <div class="flex items-start space-x-4">
                <i class="fa-solid fa-clock text-blue-900 text-2xl mt-1"></i>
                <div>
                    <h3 class="font-bold text-gray-800">Working Hours</h3>
                    <p class="text-gray-600 text-sm">Mon - Fri: 9:00 AM - 6:00 PM</p>
                </div>
            </div>
        </div>

    <!-- Google Map -->
    <div class="rounded-2xl overflow-hidden shadow-lg">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3875.8509503559075!2d100.53579161521652!3d13.72992459036139!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30e29ed33f7b1f1f%3A0x6f3a9a3a2075f09e!2sBangkok%2C%20Thailand!5e0!3m2!1sen!2sus!4v1700000000000!5m2!1sen!2sus"
                width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
