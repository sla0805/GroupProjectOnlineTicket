@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="max-w-6xl mx-auto px-4 py-12 space-y-12">

    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-blue-900 mb-4 drop-shadow-lg">Privacy Policy</h1>
        <p class="text-lg md:text-xl text-gray-700 drop-shadow-md">
            Your privacy and data protection are our top priorities at StarEvents.
        </p>
    </div>

    <!-- Introduction Section -->
    <div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">Introduction</h2>
        <p class="text-gray-700 text-lg">
            StarEvents Pvt Ltd (“we”, “our”, “us”) is committed to protecting your personal data and respecting your privacy.
            This Privacy Policy explains how we collect, use, and safeguard your information when you access and use our Online Event Ticketing Web Application.
        </p>
    </div>

    <!-- Information We Collect -->
    <div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">Information We Collect</h2>
        <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li>Personal information you provide when registering or booking tickets (name, email, phone number, payment details).</li>
            <li>Information about your events preferences and browsing activity to improve user experience.</li>
            <li>Technical information, such as IP address, device type, browser type, and usage data.</li>
        </ul>
    </div>

    <!-- How We Use Your Information -->
    <div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">How We Use Your Information</h2>
        <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li>To provide and manage your account and ticket bookings.</li>
            <li>To process payments securely.</li>
            <li>To send updates, promotions, and notifications about events you may be interested in.</li>
            <li>To improve and personalize our services.</li>
            <li>To comply with legal obligations and prevent fraudulent activities.</li>
        </ul>
    </div>

    <!-- Your Rights -->
    <div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">Your Privacy Rights</h2>
        <p class="text-gray-700 text-lg">
            You have the right to:
        </p>
        <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li>Access and obtain a copy of your personal data.</li>
            <li>Request correction or deletion of your personal information.</li>
            <li>Withdraw consent to process your data at any time.</li>
            <li>Object to processing or request data portability.</li>
            <li>Report concerns or complaints to the relevant data protection authorities.</li>
        </ul>
    </div>

    <!-- Data Security -->
    <div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">Data Security</h2>
        <p class="text-gray-700 text-lg">
            We implement industry-standard security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction. Your data is stored securely and only accessible by authorized personnel.
        </p>
    </div>

    <!-- Contact for Privacy Inquiries -->
    <div class="bg-white shadow-lg rounded-2xl p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">Contact Us</h2>
        <p class="text-gray-700 text-lg">
            If you have any questions about this Privacy Policy or your data, please contact our support team:
        </p>
        <ul class="list-none space-y-2 text-gray-700">
            <li><strong>Email:</strong> privacy@starevents.com</li>
            <li><strong>Phone:</strong> +12345678</li>
            <li><strong>Address:</strong> 123 Example Road, Bangkok, Thailand</li>
        </ul>
    </div>

</div>
