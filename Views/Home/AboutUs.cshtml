@{
    ViewData["Title"] = "About Us";
}

<div class="max-w-6xl mx-auto px-4 py-12 space-y-12">

    <!-- Hero Section -->
    <div class="relative bg-blue-900 text-white rounded-3xl p-10 md:p-16 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">About StarEvents Pvt Ltd</h1>
        <p class="text-lg md:text-xl drop-shadow-md">
            Your trusted partner for discovering, booking, and managing tickets for top events in the UK and worldwide.
        </p>
    </div>

    <!-- Company Overview -->
    <div class="grid md:grid-cols-2 gap-8 items-center">
        <img src="/images/about-us-office.jpg" alt="StarEvents Team" class="rounded-2xl shadow-lg w-full object-cover h-64 md:h-80">
        <div class="space-y-4">
            <h2 class="text-2xl font-semibold text-blue-900">Who We Are</h2>
            <p class="text-gray-700 text-lg">
                StarEvents Pvt Ltd has partnered with expert software developers to build a modern Online Event Ticketing Web Application.
                We aim to make ticket booking seamless and enjoyable for everyone, while supporting event organizers to manage their events efficiently.
            </p>
            <p class="text-gray-700 text-lg">
                Our platform is designed to provide real-time insights on ticket sales, secure payment processing, and a user-friendly experience for both attendees and organizers.
            </p>
        </div>
    </div>

    <!-- System Features -->
    <div class="space-y-8">
        <h2 class="text-2xl font-semibold text-blue-900 text-center">Our System Features</h2>
        <div class="grid md:grid-cols-3 gap-6">

            <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center text-center hover:scale-105 transition-transform duration-300">
                <i class="fa-solid fa-calendar-check text-blue-900 text-3xl mb-3"></i>
                <h3 class="text-xl font-bold mb-2">View Upcoming Events</h3>
                <p class="text-gray-600 text-sm">
                    Browse a curated list of concerts, theatre shows, and cultural events happening across the UK.
                </p>
            </div>

            <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center text-center hover:scale-105 transition-transform duration-300">
                <i class="fa-solid fa-ticket text-blue-900 text-3xl mb-3"></i>
                <h3 class="text-xl font-bold mb-2">Book Tickets Online</h3>
                <p class="text-gray-600 text-sm">
                    Securely purchase tickets in just a few clicks and receive instant confirmation.
                </p>
            </div>

            <div class="bg-white rounded-2xl shadow-lg p-6 flex flex-col items-center text-center hover:scale-105 transition-transform duration-300">
                <i class="fa-solid fa-users-gear text-blue-900 text-3xl mb-3"></i>
                <h3 class="text-xl font-bold mb-2">Organize & Monitor Events</h3>
                <p class="text-gray-600 text-sm">
                    Event organizers can publish events, set prices, and monitor ticket sales in real-time from a dedicated dashboard.
                </p>
            </div>

        </div>
    </div>

    <!-- Mission Statement -->
    <div class="bg-blue-50 rounded-3xl p-10 text-center">
        <h2 class="text-2xl font-semibold text-blue-900 mb-4">Our Mission</h2>
        <p class="text-gray-700 text-lg">
            To create a seamless, secure, and interactive ticketing experience that connects event enthusiasts with unforgettable experiences, while empowering organizers with innovative management tools.
        </p>
    </div>

</div>

