@model IEnumerable<OnlineTicket.Models.Booking>
@{
    ViewBag.Title = "My Bookings";
}

<link rel="stylesheet" href="~/css/customer-dashboard.css" />

<div class="container py-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">My Bookings</h2>
            <p class="text-muted mb-0">Manage your past and upcoming event reservations.</p>
        </div>
        <a asp-controller="Customer" asp-action="Dashboard" class="btn btn-outline-secondary btn-sm rounded-pill">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <!-- Bookings Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-4 p-3">
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Event</th>
                                        <th class="text-center">Quantity</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">@b.Event.Title</td>
                                            <td class="text-center">
                                                <span class="badge bg-light text-dark border">@b.Quantity</span>
                                            </td>
                                            <td class="fw-bold text-dark">@b.TotalAmount.ToString("C")</td>
                                            <td>
                                                @switch (b.BookingStatus)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning text-dark status-badge">Pending</span>
                                                        break;
                                                    case "Paid":
                                                    case "Confirmed":
                                                        <span class="badge bg-success status-badge">Confirmed</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary status-badge">@b.BookingStatus</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end pe-4">
                                                <div class="d-flex justify-content-end align-items-center gap-2">
                                                    @if (b.BookingStatus == "Pending")
                                                    {
                                                        <a asp-controller="Payment" asp-action="Create" asp-route-bookingId="@b.BookingId"
                                                           class="btn btn-success btn-sm rounded-pill px-3 shadow-sm">
                                                            <i class="bi bi-credit-card me-1"></i> Pay Now
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-success small fw-bold me-2">
                                                            <i class="bi bi-check-circle-fill"></i> Paid
                                                        </span>
                                                    }

                                                    <a asp-controller="Ticket" asp-action="MyTickets" asp-route-bookingId="@b.BookingId"
                                                       class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                                        <i class="bi bi-ticket-perforated me-1"></i> View Tickets
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@b.BookingId" class="btn btn-info btn-sm">
                                                        View
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3 text-muted opacity-50">
                                <i class="bi bi-ticket-detailed fs-1"></i>
                            </div>
                            <h5 class="text-muted">No bookings found</h5>
                            <a asp-controller="Event" asp-action="Index" class="btn btn-primary mt-2 rounded-pill px-4">
                                Browse Events
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


