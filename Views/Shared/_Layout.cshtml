<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarEvents</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="flex flex-col min-h-screen">

    <!-- Header -->
    <header class="fixed top-0 w-full bg-blue-900 text-white shadow-md z-50">
        <div class="flex items-center justify-between px-6 py-5 max-w-7xl mx-auto">
            <!-- Brand -->
            <div class="flex items-center space-x-2">
                <a asp-controller="Home" asp-action="Index" class="flex items-center font-bold text-lg">
                    <i class="fa-solid fa-ticket mr-2"></i>
                    <span>Star Events</span>
                </a>
            </div>


            <!-- Desktop Menu -->
            <div class="hidden md:flex items-center space-x-6">
                <a asp-controller="Home" asp-action="Index" class="hover:text-gray-300">Home</a>
                <a asp-controller="Home" asp-action="AboutUs" class="hover:text-gray-300">About Us</a>
                <a asp-controller="Home" asp-action="Contact" class="hover:text-gray-300">Contact</a>
                <a asp-controller="Home" asp-action="Privacy" class="hover:text-gray-300">Privacy</a>
                <partial name="_LoginPartial" />
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-white focus:outline-none">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden px-6 pb-4 flex flex-col space-y-2 bg-blue-800">
            <a asp-controller="Home" asp-action="Index" class="text-white py-2 rounded hover:bg-blue-700">Home</a>
            <a asp-controller="Event" asp-action="Index" class="text-white py-2 rounded hover:bg-blue-700">Events</a>
            <partial name="_LoginPartial" />
        </div>
    </header>

    <!-- Page Content -->
    <main class="flex-1 pt-20 w-full">
        <div class="max-w-7xl mx-auto px-6">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="mt-auto py-4 bg-blue-800 text-center text-white w-full">
        <span>&copy; 2025 - StarEvents Pvt Ltd. All rights reserved.</span>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Mobile menu toggle
        const btn = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
