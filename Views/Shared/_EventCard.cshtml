@model OnlineTicket.Models.Event

<div class="card h-100 border-0 shadow-sm">
    <div class="card-img-top" style="height:180px;overflow:hidden;">
        <img src="~/uploads/@(Model.ImagePath ?? "event-placeholder.jpg")" alt="@Model.Title" style="width:100%;height:100%;object-fit:cover" />
    </div>
    <div class="card-body d-flex flex-column">
        <div class="mb-2">
            <span class="badge bg-primary">@Model.EventDate.ToString("dd MMM")</span>
            <small class="text-muted ms-2">@Model.Venue</small>
        </div>

        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text text-muted small mb-3">
            @(
                (Model.Description ?? "").Length > 100 ? (Model.Description.Substring(0, 100) + "...") : Model.Description
                )
        </p>

        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="text-success fw-bold">
                    @(
                        Model.TicketTypes != null && Model.TicketTypes.Any() ?
                        "From " + Model.TicketTypes.Min(t => t.Price).ToString("C") : "Price N/A")
                </div>
                <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-primary btn-sm">View</a>
            </div>
            <a asp-controller="Booking" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-primary w-100">Book Now</a>
        </div>
    </div>
</div>
