@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="flex items-center space-x-4">
        <a class="text-white hover:text-gray-300" asp-controller="Account" asp-action="Manage" title="Manage">
            Hello @User.Identity?.Name!
        </a>

        <form class="flex items-center" asp-controller="Account" asp-action="Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
            <button type="submit" class="text-white hover:text-gray-300 flex items-center space-x-1">
                <i class="fa-solid fa-sign-out-alt"></i>
                <span>Logout</span>
            </button>
        </form>
    </div>
}
else
{
    <div class="flex items-center space-x-3">
        <a class="text-white hover:text-gray-200 flex items-center space-x-1" asp-controller="Account" asp-action="Register">
            <i class="fa-solid fa-user-plus"></i>
            <span>Register</span>
        </a>

        <a class="bg-transparent border border-white text-white hover:bg-white hover:text-blue-900 px-3 py-1 rounded flex items-center space-x-1"
           asp-controller="Account" asp-action="Login">
            <i class="fa-solid fa-sign-in-alt"></i>
            <span>Login</span>
        </a>
    </div>
}
