@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link btn btn-warning text-dark" asp-controller="Admin" asp-action="Index" style="margin-right: 10px;">
                    <i class="fa-solid fa-shield-halved"></i> Admin Dashboard
                </a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Manage" title="Manage">
                Hello @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Customer" asp-action="Profile">Profile</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-light" style="padding-top: 0.6rem;">
                    <i class="fa-solid fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">
                <i class="fa-solid fa-user-plus"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-outline-light" style="margin-left: 5px;" asp-controller="Account" asp-action="Login">
                <i class="fa-solid fa-sign-in-alt"></i> Login
            </a>
        </li>
    }
</ul>