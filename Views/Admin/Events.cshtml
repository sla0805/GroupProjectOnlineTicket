@model OnlineTicket.ViewModels.PagedResult<OnlineTicket.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="max-w-7xl mx-auto p-6">

    <!-- Header -->
    <div class="bg-white shadow-lg rounded-xl p-6 mb-6">
        <h1 class="text-5xl font-extrabold text-indigo-600 flex items-center gap-3">
            <i class="fa-solid fa-calendar-days fa-lg"></i> Event Management
        </h1>
        <p class="text-gray-600 mt-2 text-lg">
            View, search, and manage all events in the system.
        </p>
    </div>

    <!-- Search Form -->
    <div class="mb-6 flex flex-col md:flex-row md:items-center md:gap-4">
        <form method="get" class="flex gap-2 flex-wrap w-full md:w-auto">
            <input type="text" name="search" placeholder="Search by title, category, venue, organizer"
                   value="@(ViewBag.Search ?? "")"
                   class="border px-3 py-2 rounded-lg w-full md:w-64 focus:ring focus:ring-indigo-300 focus:outline-none transition" />
            <button type="submit"
                    class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow">
                Search
            </button>
            <a asp-action="Events"
               class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition shadow">
                Clear
            </a>
        </form>
    </div>

    <!-- Events Table -->
    <div class="bg-white p-6 rounded-xl shadow mb-8 overflow-x-auto">
        @if (Model.Items.Any())
        {
            <table class="w-full table-auto border border-gray-200">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-4 py-2 text-left">Event ID</th>
                        <th class="px-4 py-2 text-left">Title</th>
                        <th class="px-4 py-2 text-left">Event Date</th>
                        <th class="px-4 py-2 text-left">Base Ticket Price</th>
                        <th class="px-4 py-2 text-left">Description</th>
                        <th class="px-4 py-2 text-left">Category</th>
                        <th class="px-4 py-2 text-left">Venue</th>
                        <th class="px-4 py-2 text-left">Organizer</th>
                        <th class="px-4 py-2 text-left">Total Seats</th>
                        <th class="px-4 py-2 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ev in Model.Items)
                    {
                        <tr class="border-t border-gray-200 hover:bg-gray-50 transition">
                            <td class="px-4 py-2">@ev.EventId</td>
                            <td class="px-4 py-2 font-semibold">@ev.Title</td>
                            <td class="px-4 py-2">@ev.EventDate.ToString("yyyy-MM-dd")</td>
                            <td class="px-4 py-2">@ev.TicketPrice.ToString("C")</td>
                            <td class="px-4 py-2">@ev.Description</td>
                            <td class="px-4 py-2">@ev.Category?.Name</td>
                            <td class="px-4 py-2">@ev.Venue?.Name</td>
                            <td class="px-4 py-2">@ev.Organizer?.OrganizerName</td>
                            <td class="px-4 py-2">@ev.TotalSeats</td>
                            <td class="px-4 py-2 text-center">
                                <form asp-action="DeleteEvent" method="post" onsubmit="return confirmDelete(this);" class="inline">
                                    <input type="hidden" name="eventId" value="@ev.EventId" />
                                    <button type="submit" class="px-3 py-1 rounded bg-red-600 text-white hover:bg-red-700 transition">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="flex justify-center items-center gap-2 mt-6 flex-wrap">
                @if (Model.HasPreviousPage)
                {
                    <a asp-action="Events" asp-route-page="@(Model.Page - 1)" asp-route-search="@(ViewBag.Search)"
                       class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">Previous</a>
                }

                <span class="px-4 py-2 bg-indigo-600 text-white rounded font-semibold">
                    Page @Model.Page of @Model.TotalPages
                </span>

                @if (Model.HasNextPage)
                {
                    <a asp-action="Events" asp-route-page="@(Model.Page + 1)" asp-route-search="@(ViewBag.Search)"
                       class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">Next</a>
                }
            </div>
        }
        else
        {
            <p class="text-gray-500 italic text-center py-6">No events found.</p>
        }
    </div>

    <!-- Back Button -->
    <div class="flex justify-start">
        <a asp-action="Dashboard" asp-controller="Admin"
           class="inline-flex items-center px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 transition">
            <i class="fa-solid fa-arrow-left mr-2"></i> Back to Dashboard
        </a>
    </div>

</div>

@section Scripts {
    <script>
        function confirmDelete(form) {
            return confirm("Are you sure you want to delete this event? This action cannot be undone.");
        }
    </script>
}
