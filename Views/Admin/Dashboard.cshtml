@model OnlineTicket.ViewModels.AdminDashboardVM
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="max-w-7xl mx-auto p-6">

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <h1 class="text-3xl font-bold text-indigo-600 mb-4 md:mb-0">
            <i class="fa-solid fa-tachometer-alt mr-2"></i> Admin Dashboard
        </h1>

        <div class="flex gap-2 flex-wrap">
            <a asp-controller="Account" asp-action="EditAccount"
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                <i class="fa-solid fa-user-edit mr-2"></i> Edit Your Account
            </a>
            <a asp-controller="Account" asp-action="Index"
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 transition">
                <i class="fa-solid fa-user-shield mr-2"></i> Manage User Accounts
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-6 mb-6">

        <!-- Active Users -->
        <div class="bg-indigo-50 p-6 rounded-xl shadow flex flex-col justify-between border-l-4 border-indigo-500">
            <div class="flex items-center gap-4">
                <div class="bg-indigo-200 p-3 rounded-full text-indigo-600">
                    <i class="fa-solid fa-users fa-lg"></i>
                </div>
                <div>
                    <p class="text-gray-500 font-medium">Active Users</p>
                    <p class="text-3xl font-extrabold mt-1">@Model.ActiveUsersCount</p>
                </div>
            </div>
        </div>

        <!-- Tickets Sold Per Event -->
        <div class="bg-green-50 p-6 rounded-xl shadow flex flex-col justify-between border-l-4 border-green-500">
            <div class="flex items-center gap-4">
                <div class="bg-green-200 p-3 rounded-full text-green-600">
                    <i class="fa-solid fa-ticket fa-lg"></i>
                </div>
                <div>
                    <p class="text-gray-500 font-medium">Total Tickets Sold</p>
                    <p class="text-3xl font-extrabold mt-1">@Model.TicketsPerEvent.Sum(t => t.TotalTicketsSold)</p>
                </div>
            </div>
        </div>

        <!-- Revenue Per Event -->
        <div class="bg-yellow-50 p-6 rounded-xl shadow flex flex-col justify-between border-l-4 border-yellow-500">
            <div class="flex items-center gap-4">
                <div class="bg-yellow-200 p-3 rounded-full text-yellow-600">
                    <i class="fa-solid fa-coins fa-lg"></i>
                </div>
                <div>
                    <p class="text-gray-500 font-medium">Total Revenue</p>
                    <p class="text-3xl font-extrabold mt-1">@Model.RevenuePerEvent.Sum(r => r.TotalRevenue).ToString("C")</p>
                </div>
            </div>
        </div>

    </div>

    <!-- Management Cards Row -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

        <!-- Manage Venues -->
        <div class="bg-blue-100 p-6 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-blue-200 p-3 rounded-full text-blue-700">
                    <i class="fa-solid fa-building fa-lg"></i>
                </div>
                <div>
                    <p class="text-blue-800 font-semibold">Manage Venues</p>
                    <p class="text-2xl font-bold mt-1">Venue List</p>
                </div>
            </div>
            <a asp-controller="Admin" asp-action="ListVenues"
               class="inline-flex items-center justify-center w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                <i class="fa-solid fa-list mr-2"></i> View Venues
            </a>
        </div>

        <!-- Manage Customers -->
        <div class="bg-purple-100 p-6 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-purple-200 p-3 rounded-full text-purple-700">
                    <i class="fa-solid fa-user fa-lg"></i>
                </div>
                <div>
                    <p class="text-purple-800 font-semibold">Manage Customers</p>
                    <p class="text-2xl font-bold mt-1">Customer List</p>
                </div>
            </div>
            <a asp-controller="Admin" asp-action="Customers"
               class="inline-flex items-center justify-center w-full px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition">
                <i class="fa-solid fa-list mr-2"></i> View Customers
            </a>
        </div>

        <!-- Manage Organizers -->
        <div class="bg-pink-100 p-6 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-pink-200 p-3 rounded-full text-pink-700">
                    <i class="fa-solid fa-user-tie fa-lg"></i>
                </div>
                <div>
                    <p class="text-pink-800 font-semibold">Manage Organizers</p>
                    <p class="text-2xl font-bold mt-1">Organizer List</p>
                </div>
            </div>
            <a asp-controller="Admin" asp-action="Organizers"
               class="inline-flex items-center justify-center w-full px-4 py-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition">
                <i class="fa-solid fa-list mr-2"></i> View Organizers
            </a>
        </div>

    </div>

    <!-- Analytics & Booking Management Row -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">

        <!-- Booking Management Placeholder -->
        <div class="bg-orange-100 p-6 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-orange-200 p-3 rounded-full text-orange-700">
                    <i class="fa-solid fa-book-open fa-lg"></i>
                </div>
                <div>
                    <p class="text-orange-800 font-semibold">Booking Management</p>
                    <p class="text-2xl font-bold mt-1">Booking Lists</p>
                </div>
            </div>
            <a asp-controller="Admin" asp-action="Bookings"
               class="inline-flex items-center justify-center w-full px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition">
                <i class="fa-solid fa-arrow-right mr-2"></i> Manage Bookings
            </a>
        </div>

        <!-- Event Analytics -->
        <div class="bg-teal-100 p-6 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-teal-200 p-3 rounded-full text-teal-700">
                    <i class="fa-solid fa-chart-simple fa-lg"></i>
                </div>
                <div>
                    <p class="text-teal-800 font-semibold">Data Analytics (Event)</p>
                    <p class="text-2xl font-bold mt-1">Tickets & Revenue</p>
                </div>
            </div>
            <a asp-controller="Admin" asp-action="AdminAnalytics"
               class="inline-flex items-center justify-center w-full px-4 py-2 bg-teal-600 text-white rounded-lg hover:bg-teal-700 transition">
                <i class="fa-solid fa-arrow-right mr-2"></i> View Analytics
            </a>
        </div>

        <!-- Revenue Per Month Chart -->
        <div class="bg-indigo-100 p-6 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-1">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-indigo-200 p-3 rounded-full text-indigo-700">
                    <i class="fa-solid fa-chart-column fa-lg"></i>
                </div>
                <div>
                    <p class="text-indigo-800 font-semibold">Data Analytics (Organizer)</p>
                    <p class="text-2xl font-bold mt-1">Monthly Revenue</p>
                </div>
            </div>
            <a asp-controller="Admin" asp-action="Charts"
               class="inline-flex items-center justify-center w-full px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                <i class="fa-solid fa-chart-simple mr-2"></i> View Chart
            </a>
        </div>
    </div>


